    <fieldset>
    <legend><%= controller.action_name.capitalize %></legend>

    <div class="form-group">
      <label class="col-lg-2 control-label">日期</label>
      <div class="col-lg-6">
        <%= f.datetime_select :date, {:start_year => (Time.now.year), :end_year =>  (Time.now.year + 1), :minute_step => 15, :default => { day: 20, hour: 12, minute: 0 }} %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">地址</label>
      <div class="col-lg-6">
        <%= f.text_field :location, :class => "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">备注</label>
      <div class="col-lg-6">
        <%= f.text_area :desc, :class => "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 col-lg-offset-2">
          <%= f.submit "提交", :class => 'btn btn-primary' %>
          <%= link_to '取消', admin_marriage_schedules_path, :class => 'btn' %>
      </div>
    </div>
  </fieldset>


