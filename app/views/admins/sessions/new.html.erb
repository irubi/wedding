<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <legend>管理员登陆</legend>
    <div class="form-group">
      <label for="username" class="col-lg-2 control-label">用户名</label>
      <div class="col-lg-3">
        <%= f.text_field :username, :autofocus => true, :class => "form-control", :placeholder => "用户名" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">密码</label>
      <div class="col-lg-3">
        <%= f.password_field :password, :class => "form-control", :placeholder => "密码" %>    
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>记住我
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "登陆", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
